{
    "compilerOptions": {
      "lib": ["es2023"],
      "module": "node16",
      "target": "es2022",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": false,
      "moduleResolution": "node16",
      "declaration": true,
      "outDir": "./dist",
      "noImplicitAny": false,
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "incremental": true,
      "allowJs": true,
      "isolatedModules": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
